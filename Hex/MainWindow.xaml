<Window x:Class="Hex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hex"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="5">
                <Button Margin="2">Create Game</Button>
                <Button Margin="2">Move</Button>
                <Button Margin="2">Game Result</Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left">
                <TextBlock>Result</TextBlock>
                <TextBlock Text="{Binding = Result}">test</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
